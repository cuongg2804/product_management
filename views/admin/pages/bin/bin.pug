extends  ../../layout/default-2.pug
include ../../mixins/filter.pug
include ../../mixins/search.pug
include ../../mixins/pagination.pug
block main
  h1(class="mb-4") Danh sách sản phẩm

  .card.mb-3
    .card-header Bộ lọc và Tìm kiếm
    .card-body
      .row
        .col-6
          +search(keyword)
    
  .card-header Danh sách sản phẩm
    .card-body

    table(class="table table-hover table-sm" )   
      thead
        tr
          th STT
          th Hình ảnh
          th Tiêu đề
          th Giá
          th Hành động

      tbody
        each item,index in products 
          tr 
            td #{index+1}
            td
              img(
                src= item. thumbnail
                alt= item.title
                width="100px"
                height="auto"
              )
            td #{item.title}
            td #{item.price}$
            td
              button(class="btn btn-warning btn-sm" recovery id = item.id) Khôi phục
  script(src="/admin/bin.js") 
  nav 
    +pagination(objectPagination)

  form(
    form-recovery
    method="POST"
    action=""
    data-path="/admin/bins"
  )
