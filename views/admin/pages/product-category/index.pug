extends ../../layout/default.pug
include ../../mixins/alert.pug
include ../../mixins/select-tree-index.pug

block main
  if(roles.permissions.includes("products-category_view"))
    +alert-success()
    h1(class="mb-4") Danh mục sản phẩm

    .card.mb-3
      .card-header Danh sách
      .card-body
        .row
          .col-8
          .col-4.text-right
            if(roles.permissions.includes("products-category_create"))
              a(
                href=`/${prefixAdmin}/products-category/create`
                class="btn btn-outline-success"
              ) + Thêm mới
    table(
          class="table table-hover table-sm"
        )
          thead
            tr
              th Hình ảnh
              th Tiêu đề
              th Vị trí
              th Trạng thái
              th Hành động

          tbody
            +select-tree-index(records)
  else
    div Không có quyền truy cập