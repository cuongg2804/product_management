extends  ../../layout/default.pug

block main
  h1 Trang tổng quan bên admin
  h1 Tổng quan

  div #{user.fullName}
  .row.mt-4
    .col-12
      .card.mb-4
        .card-header Thông tin tài khoản
        .card-body
          if(user.avatar)
            img(
              src=user.avatar
              style="height: 100px;margin-bottom: 15px;"
            )
          if(user.fullName)
            p Họ tên: <b>#{user.fullName}</b>
          if(user.email)
            p Email: <b>#{user.email}</b>
          if(user.phone)
            p Số điện thoại: <b>#{user.phone}</b>
          if(roles.title)
            p Phân quyền: <b>#{roles.title}</b>
      .col-6
        .card.mb-4
          .card-header Sản phẩm
          .card-body
            p Số lượng: <b>#{products.total}</b>
            p Hoạt động: <b>#{products.active}</b>
            p Dừng hoạt động: <b>#{products.inactive}</b>
      .col-6
        .card.mb-4
          .card-header Tài khoản người dùng
          .card-body
            p Số lượng: <b>#{user.total} new</b>
            p Hoạt động: <b>#{user.active}</b>
            p Dừng hoạt động: <b>#{user.inactive}</b>
      .col-6
        .card.mb-4
          .card-header Danh mục sản phẩm
          .card-body
            p Số lượng: <b>#{products_category.total}</b>
            p Hoạt động: <b>#{products_category.active}</b>
            p Dừng hoạt động: <b>#{products_category.inactive}</b>
      .col-6
        .card.mb-4
          .card-header Tài khoản admin
          .card-body
            p Số lượng: <b>#{account.total}</b>
            p Hoạt động: <b>#{account.active}</b>
            p Dừng hoạt động: <b>#{account.inactive}</b>